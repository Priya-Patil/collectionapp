<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_video"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:id="@+id/ll_title">
        <TextView
            android:id="@+id/tv_payAmtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amount"
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:textSize="@dimen/mediumTextSize"
            android:layout_below="@+id/tv_Paydate"
            android:layout_weight="2"/>
            <TextView
                android:id="@+id/tv_payAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount"
                android:layout_toRightOf="@+id/tv_payAmtText"
                android:textColor="@color/textColor"
                android:padding="5dp"
                android:textSize="@dimen/mediumTextSize"
                android:layout_below="@+id/tv_Paydate"
                android:layout_weight="2"/>
        <TextView
            android:id="@+id/tv_Paydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="date"
            android:drawableLeft="@drawable/ic_calender"
            android:drawablePadding="5dp"
            android:textColor="@color/textColor"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_NotificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="time"
            android:layout_toRightOf="@+id/tv_Paydate"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="5dp"
            android:textColor="@color/textColor"
            android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>