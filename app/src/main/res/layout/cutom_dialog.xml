<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_rl"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person"
                android:id="@+id/img_login"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/grey"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id:   "
                android:layout_toRightOf="@+id/img_login"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/textColor"
                android:id="@+id/tv_enggId"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_margin="5dp"
                android:checked="true"
                android:clickable="false"
                android:gravity="end" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/img_login"
                android:layout_below="@id/tv_enggId"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:id="@+id/tv_enggName" />
            <Spinner
                android:id="@+id/sp_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_tvborder"
                android:layout_below="@id/tv_enggName"
                android:layout_toRightOf="@+id/img_login"
                android:textColor="@color/textColor"
                android:layout_marginBottom="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="5dp"
                android:layout_marginRight="50dp"
                />
            <Spinner
                android:id="@+id/sp_vehicle"
                android:layout_below="@id/sp_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/img_login"
                android:textColor="@color/textColor"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_tvborder"
                android:layout_marginRight="50dp"
                />
            <TextView
                android:id="@+id/tv_Ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:paddingTop="@dimen/padding_10"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:shadowColor="#A8A8A8"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="8"
                android:layout_below="@id/sp_vehicle"
                android:text="OK"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>