                          android:paddingBottom="@dimen/padding_10"
                        />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mixgarbage"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:paddingRight="@dimen/padding_10"
                        android:paddingTop="@dimen/padding_10"
                        android:paddingBottom="@dimen/padding_10"
                        android:layout_toRightOf="@id/img_openDrawer"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circular_tvborder"
                        android:layout_marginTop="@dimen/padding_10"
                        >
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_mixGarbage"
                        android:padding="@dimen/padding_10"
                        android:spinnerMode="dialog"
                     />
                    </LinearLayout>
                    <!--  <EditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="@string/drygarbageqty"
                          android:textAllCaps="true"
                          android:textStyle="bold"
                          android:layout_marginTop="5dp"
                          android:textColor="@color/textColor"
                          android:paddingRight="@dimen/padding_10"
                          android:paddingTop="@dimen/padding_10"
                          android:paddingBottom="@dimen/padding_10"
                        />-->

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

            <TextView
                android:id="@+id/tv_submitnsend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submitnsend"
                android:textStyle="bold"
                android:textSize="@dimen/largeTextSize"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_margin="30dp"
                android:padding="@dimen/padding_10"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/colorBrown"/>

        </RelativeLayout>

    <!-- End dumpyard code  -->
</LinearLayout>
</RelativeLayout>
</layout>