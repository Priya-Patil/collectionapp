                            />
                    </LinearLayout>


                    <!--  <EditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="@string/drygarbageqty"
                          android:textAllCaps="true"
                          android:textStyle="bold"
